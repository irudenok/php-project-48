#!/C:/xampp8/php

<?php

use Docopt as dc;
use function Differ\Differ\genDiff;

$autoloadPath1 = __DIR__ . '/../../../autoload.php';
$autoloadPath2 = __DIR__ . '/../vendor/autoload.php';

if (file_exists($autoloadPath1)) {
    require_once $autoloadPath1;
} else {
    require_once $autoloadPath2;
}

$doc = <<<DOC
Generate diff

Usage:
  gendiff <file1> <file2>
  gendiff (-h|--help)
  gendiff (-v|--version)
  gendiff [--format <fmt>] <firstFile> <secondFile>

Options:
  -h --help                     Show this screen
  -v --version                  Show version
  --format <fmt>                Report format [default: stylish]
DOC;

$args = Docopt::handle($doc, array('version' => '1.0.0'));

// TODO: add absoslute path
$file1 = getcwd() . DIRECTORY_SEPARATOR . $args['<file1>'];
$file2 = getcwd() . DIRECTORY_SEPARATOR . $args['<file2>'];

// echo $file1 . " " . $file2;

// print_r(json_decode(file_get_contents($file1)));
// print_r(json_decode(file_get_contents($file2)));

echo genDiff($file1, $file2);
